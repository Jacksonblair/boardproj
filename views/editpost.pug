include partials/header
#wrapper
	include partials/menugrid
	#maingrid.ui.stackable.grid
		.ui.two.wide.column.side-column
		#commoncolumn.ui.twelve.wide.column.main-column
			if post
				form.ui.form(action="./?_method=PUT" method="POST")
					.field
						.label Title	
						input(type="text" name="title" value=post.title )
					.field
						.label Description
						input(type="text" name="description" value=post.description )
					.field
						.label Category
						select.ui.dropdown(name="category" value=post.category )
							option(value="EVENT") EVENT
							option(value="ANNOUNCEMENT") ANNOUNCEMENT
							option(value="REMINDER") REMINDER
					.field
						.label Date
						.ui.calendar
							input(type="text" name="target_date" value=post.target_date)
					.field
						.label Content
						textarea#textarea(name="content")=post.content
					button.ui.button(type="submit") Update Post
		.ui.two.wide.column.side-column

include partials/footer