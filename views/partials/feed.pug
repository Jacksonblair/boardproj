#itemfeed.ui.items
	.ui.left.aligned.grid.feed-item-grid
		include feedmenu
	.ui.left.aligned.grid.feed-item-grid
		#newitemcolumn.sixteen.wide.column
			.ui.basic.segment
				a(href="./new_post")
					i.fas.fa-plus
					span &nbspAdd new post
	if feed
		each day in feed
			.ui.left.aligned.grid.feed-item-grid
				.column.post-column
					.ui.basic.segment.post-segment(onclick="showSiblings(this)" value="shown")
						include feeddate
					each post in day.posts
						include feeditemfunc
						include feeditem
		.ui.left.aligned.grid.feed-item-grid
			.column.post-column
				.ui.basic.segment.feedend-segment
					p End of feed
	else
		.ui.negative.message There are no posts for this board.