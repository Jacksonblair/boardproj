if post
	#mobilecontentsegment.ui.segment
		.post.content.buttons
			a#postcontenteditbutton.ui.tiny.basic.button(href='./' + post.id + '/edit_post') Edit
			form#postcontentdeleteform(action='./' + post.id + '?_method=DELETE' method='POST')
				button.ui.tiny.basic.button(type='submit') Delete
		.ui.divider
		#mobilecontentviewerpostheader.ui.large.header= post.title
		#mobilecontentviewerpostdate= post.target_date
		#mobilecontentviewerpostauthor
		| Author:  
		= post.author
		.ui.divider
		#mobilecontentviewerpostdescription.ui.header= post.description
		#mobilecontentviewerpostcontent 
			!= post.content
else
	.ui.basic.segment
		.ui.center.aligned.grey.header 
			br
			br
			br
			br
			| Click a post on your feed to view the content.