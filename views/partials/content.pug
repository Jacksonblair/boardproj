if post
	#contentsegment.ui.basic.segment
		.post.content.buttons
			a#postcontenteditbutton.ui.tiny.basic.button(href='./' + post.id + '/edit_post') Edit post content
		.ui.divider
		#contentviewerpostheader.ui.large.header= post.title
		#contentviewerpostdate= post.target_date
		#contentviewerpostauthor
		| Author:  
		a(href="/users/" + post.author_id + "/")= post.author
		.ui.divider
		#contentviewerpostdescription.ui.header= post.description
		#contentviewerpostcontent 
			!= post.content
else
	.ui.basic.segment
		.ui.center.aligned.grey.header 
			br
			br
			br
			br
			| Click a post on your feed to view the content.