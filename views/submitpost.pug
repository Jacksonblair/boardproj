include partials/header
#wrapper
	include partials/menugrid
	#maingrid.ui.stackable.grid
		.ui.two.wide.column.side-column
		#commoncolumn.ui.twelve.wide.column.main-column
			form.ui.form(action="./new_post" method="POST")
				.field
					.label Title	
					input(type="text" name="title")
				.field
					.label Description
					input(type="text" name="description")
				.field
					.label Category
					select.ui.dropdown(name="category")
						option(value="EVENT") EVENT
						option(value="ANNOUNCEMENT") ANNOUNCEMENT
						option(value="REMINDER") REMINDER
				.field
					.label Date
					.ui.calendar
						input(type="text" name="target_date" placeholder="time")
				.field
					.label Content
					textarea#textarea(name="content")
				button.ui.button(type="submit") Submit
		.ui.two.wide.column.side-column

include partials/footer